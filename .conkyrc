############################
###### window setting ######
############################
# window position
alignment top_right
gap_x 0
gap_y 40

# avoid window blinking
double_buffer yes

# window config
# make own window
own_window yes
own_window_class Conky
own_window_type normal
own_window_transparent no
own_window_colour 111111
own_window_argb_visual yes
# how transparent
own_window_argb_value 80

# no window titlebar etc., always back, don't show in taskbar, show in all window 
own_window_hints undecorated,below,skip_taskbar,skip_pager,sticky

# draw lines or not
draw_borders no
draw_outline no
draw_shades no

###############################
###### character setting ######
###############################
# color (red, green, yellow, blue, magenta, cyan, black, white)
default_color white
default_outline_color white
default_shade_color yellow

# activate antialias on the font
use_xft yes
# choose font from "fc-list"
xftfont Ubuntu:style=Regular:size=12

# force to use utf-8 (use with xft)
override_utf8_locale yes

# all character become uppercase
uppercase no

############################
###### system setting ######
############################
## run in background
background yes

# output stdout and stderr when you use in console and want to get them
out_to_console no
out_to_stderr no
extra_newline no

# update rate
update_interval 1.0

# cpu core
cpu_avg_samples 4

#########################
###### graph config######
#########################

# graph config
show_graph_scale yes
show_graph_range no
draw_graph_borders yes


########################
####### contents #######
######################## 
# $object -> show object (select from conky library)
# {param} -> param
TEXT
# hostname
$nodename: $uptime
# names
$sysname $kernel $machine
# drow horisontal line
$hr
#Load average: $loadavg
# cpu0 -> all cpu, cpu1.2... -> each cpu, -l -> show y axis with log scale 
CPU Freq: ${freq_g}GHz  Usage: ${cpu cpu0}%
	  ${cpugraph cpu0 -l}
GPU Freq: ${nvidia gpufreqcur}MHz  Usage: ${nvidia gpuutil}%
	  ${nvidiagraph gpuutil}
RAM Usage: $mem/$memmax
	  $membar
Swap Usage: $swap/$swapmax
	    $swapbar
$hr
# process = sleep process + running process
Processes: $processes Running: $running_processes
Top:
Name            PID     CPU%   MEM%
${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
